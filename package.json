{
  "name": "claude-usage-menubar",
  "version": "1.0.0",
  "description": "Claude Code 토큰 사용량을 macOS 메뉴바에 실시간으로 표시하는 앱",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": ["claude", "token", "usage", "menubar", "macos"],
  "author": "Claude Usage Monitor",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "ccusage": "^15.5.2"
  },
  "build": {
    "appId": "com.claude.usage.menubar",
    "productName": "Claude Usage Monitor",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}